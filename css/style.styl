 ::-webkit-input-placeholder {
   color: rgba(0,0,0,0.7);
}

:-moz-placeholder { /* Firefox 18- */
   color: rgba(0,0,0,0.7);  
}

::-moz-placeholder {  /* Firefox 19+ */
   color: rgba(0,0,0,0.7);  
}

:-ms-input-placeholder {  
   color: rgba(0,0,0,0.7);  
}

.icon-block {
  padding: 0 15px;
}
.icon-block .material-icons {
	font-size: inherit;
}

.no-margin-bottom{
	margin-bottom: 0
}

main {
	margin-top: 32px;	
	#agregar-nota, .nota {
  		input, textarea {
  			border-bottom: none;
  			height: 1.5rem;
  			margin: 0 0 8px;
  		}
  		input:focus, textarea:focus {
  			box-shadow: none !important;
        border-bottom: none !important;   
  		}
  		input {
  			font-weight: bold;
  		}
  		textarea.materialize-textarea {
  			padding: 0;
  			min-height: initial;
  		}
	}
	.nota.card {
		.card-action {
			padding 8px 20px;
			visibility: hidden;
      -webkit-transition: 0.25s;
      -moz-transition: 0.25s;
      -o-transition: 0.25s;
      -ms-transition: 0.25s;
      transition: 0.25s;
		}
	}
 .nota.card:hover {
    .card-action {
      visibility: visible;
    }
  }
  .nota.card {
    .card-action {
      a {
        margin-right: 0;
      }
    }
  }
	#categorias {
		a:hover {
			i {
				font-weight: 600;
			}
		}
	}
  #main-listaNotasArchivadas {
    display:none;
  }
  .editar-nota {
    input, textarea {
      display: none;
    }
  }
}